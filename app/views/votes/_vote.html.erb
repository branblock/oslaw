<% if current_user.voted_up_on? @post %>
  <span id="post-downvote"><%= link_to '<i class="fa fa-chevron-down"></i>&nbsp;Downvote'.html_safe, unlike_post_path(@post), method: :put, remote: true %>
<% else %>
  <span id="post-upvote"><%= link_to '<i class="fa fa-chevron-up"></i>&nbsp;Upvote'.html_safe, like_post_path(@post), method: :put, remote: true %>
<% end %>
