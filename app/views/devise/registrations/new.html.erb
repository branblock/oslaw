<body id="page-registrations-new">

  <div class="row">
    <div id="first">
      <h3>Create An Account</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-offset-1 col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :username, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.submit "Sign up", class: 'btn btn-success' %>
        </div>
      <% end %>
      <p>By signing up, I agree to Oslaws's <%= link_to 'Terms of Service', '#' %>.</p>
    </div>

    <div class="col-md-offset-1 col-md-4">
      <h3>PREMIUM BOX</h3>
      <h4><i class="fa fa-check-square-o"></i> Unlimited private pages...</h4>
    </div>

  </div>

</body>
