<div class="container" style="margin-top: 20px">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p style="border-bottom: 1px solid #b5b5b5; font-size: 18px"><strong>Sign Up</strong></p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :username, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :terms_and_conditions, label: ("I agree to the #{link_to 'Terms of Service', '#'}.").html_safe, :as => :boolean, :input_html => { :checked => "false" }, required: true %>
        </div>

        <div class="form-actions" style="margin-bottom: 10px">
          <%= f.button :submit, "Sign up", class: 'btn btn-success' %>
        </div>
      <% end %>
      <div>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
