<body id="page-registrations-new">

  <div class="row">
    <div id="first">
      <h3>Create An Account</h3>
    </div>

    <div class="col-md-offset-4 col-md-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :username, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>
        <div class="form-actions">
          <%= button_tag(type: 'submit', class: "btn btn-success") do %>
           <i class="fa fa-user-plus"></i> Sign Up
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-md-offset-3 col-md-6">
      <p>By signing up, I agree to Oslaws's <%= link_to 'Terms of Service', '#' %>.</p>
      <p>Have an account? <%= link_to "Sign In", new_session_path(resource_name) %></p>
    </div>

  </div>

</body>
