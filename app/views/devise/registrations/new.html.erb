<body id="page-registrations-new">
  <div class="container">
    <div class="row">
      <h3 style="text-align: center;"><%= link_to 'Oslaw', root_path %></h3>
      <div class="panel panel-default">
        <div class="panel-heading">Create an account</div>
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :first_name, required: true, autofocus: true %>
                <%= f.input :last_name, required: true %>
                <%= f.input :username, required: true %>
                <%= f.input :email, required: true %>
                <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, required: true %>
                <%= f.button :button, '<i class="fa fa-user-plus"></i>&nbsp;Sign up'.html_safe, class: 'btn btn-success', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating Account..."} %>
              </div>
            <% end %>
          </div>
        </div>
      <p>By signing up, I agree to Oslaws's <%= link_to 'Terms of Service', '#' %>.</p>
    </div>
  </div>
</body>
