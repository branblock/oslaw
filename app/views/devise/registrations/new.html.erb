<body id="page-registrations-new">
  <div class="container">
    <div class="row">

      <div class="col-md-offset-3 col-md-6">
        <p style="color: #2098f5 !important; font-size: 28px; font-weight: 700"><i class="fa fa-share-alt"></i> Oslaw</p>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-md-offset-2 col-md-8">
              <h3>Create An Account</h3>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :first_name, required: true, autofocus: true %>
                  <%= f.input :last_name, required: true %>
                  <%= f.input :username, required: true %>
                  <%= f.input :email, required: true %>
                  <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true %>
                </div>
                <div class="form-actions" style="margin-bottom: 10px">
                  <%= button_tag(type: 'submit', class: "btn btn-success") do %>
                   <i class="fa fa-user-plus"></i> Sign Up
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div>
          <p style="font-weight: 400;">By clicking on "Sign up", I agree to Oslaws's <%= link_to 'Terms of Service', '#' %>.</p>
          <p>Have an account? <%= link_to "Sign In", new_session_path(resource_name) %></p>
          <p><%= link_to '← Return to Welcome Page', root_path %></p>
        </div>

      </div>

    </div>
  </div>
</body>
