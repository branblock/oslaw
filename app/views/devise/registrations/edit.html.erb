<div class="container" style="margin-top: 20px">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p style="border-bottom: 1px solid #b5b5b5; font-size: 18px"><strong>Edit <%= resource_name.to_s.humanize %></strong></p>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="form-inputs">
            <%= f.input :first_name, :label => 'First Name', required: false, autofocus: true %>
            <%= f.input :last_name, :label => 'Last Name', required: false %>
            <%= f.input :username, :label => 'Username', required: false %>

            <%= f.input :email, required: false %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password, autocomplete: "off", placeholder: "leave blank if you don't want to change it", required: false %>
            <%= f.input :password_confirmation, required: false %>
            <%= f.input :current_password, placeholder: "required to confirm your changes", required: true %>
            <%= f.input :avatar, as: :file, label: "Upload an avatar" %>
          </div>

          <div class="form-actions" style="margin-bottom: 10px">
            <%= f.button :submit, "Update", class: 'btn btn-success' %>
          </div>
        <% end %>

      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></br />

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
