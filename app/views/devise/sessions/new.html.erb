<body id="page-sign-in">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3><span class="glyphicon glyphicon-share" aria-hidden="true" style="font-size: 20px"></span>Oslaw</h3>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :login, placeholder: "username or email address", required: true, autofocus: true %>
            <%= f.input :password, required: true %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Sign in", class: 'btn btn-success' %>
          </div>
        <% end %>
        <p style="line-height: 1.2; margin-top: 15px;">Need an account? <%= link_to "Sign Up", registration_path(resource_name) %><br />
        <%= link_to "Resend confirmation instructions?", new_confirmation_path(resource_name) %></p>
      </div>
      <div class="col-md-8 col-md-offset-2">
        <%= link_to '← go back', root_path %>
      </div>
    </div>
  </div>
</body>
