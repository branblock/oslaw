<div class="container">
  <div class="panel panel-default" style="max-width: 400px; margin-left: auto; margin-right: auto; margin-top: 60px;">
    <div class="panel-heading">Sign in</div>
      <div class="panel-body">
        <div class="new-form-div">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :login %><br />
              <%= f.text_field :login, autofocus: true, placeholder: "Email or username" %></p>
            </div>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          <%= f.submit "Sign in", class: "btn btn-success" %>
        <% end %>
        <small><%= link_to "Forgot your password?", new_password_path(resource_name) %></small>
      </div>
    </div>
  </div>
</div>
