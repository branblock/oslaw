<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Oslaw", '#', class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to users_path, class: 'navbar-link' do %>
                <i class="fa fa-user">&nbsp;</i><%= current_user.first_name %>&nbsp<%= current_user.last_name %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to user_path(current_user), class: 'navbar-link' do %>
                <i class="fa fa-user">&nbsp;</i><%= current_user.first_name %>&nbsp<%= current_user.last_name %>
              <% end %>
            </li>
          <% end %>
            <li><%= link_to '<i class="fa fa-sign-out fa-fw"></i>Sign out'.html_safe, destroy_user_session_path, method: :delete, class: 'navbar-link'  %></li>
        <% else %>
          <li><%= link_to '<i class="fa fa-user-plus"></i>&nbsp;Sign up'.html_safe, new_user_registration_path, class: 'navbar-link' %></li>
          <li><%= link_to '<i class="fa fa-sign-in"></i>&nbsp;Sign in'.html_safe, new_user_session_path, class: 'navbar-link' %></li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
