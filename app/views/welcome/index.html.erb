<div class="jumbotron">
  <div class="container">
    <div class="col-md-6">
      <h2><i class="fa fa-balance-scale fa-3x"></i><br />Experience the benefits of collaborative lawyering.</h2>
      <p><span><i class="fa fa-check-square-o"></i> Real-world input on legal documents.</span>
      <p><span><i class="fa fa-check-square-o"></i> Free to use the public database.</span></p><p><span><i class="fa fa-check-square-o"></i> Create private groups for only $4.99/month.</p><p style="text-transform: uppercase">Join Oslaw and start collaborating now.</p>
    </div>
    <div class="col-md-4 col-md-offset-1">
      <p><strong>Create Your Free Account</strong></p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-inputs" style="text-align: left">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :username, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :terms_and_conditions, label: ("I agree to the #{link_to 'Terms of Service', '#'}.").html_safe, :as => :boolean, :input_html => { :checked => "false" }, required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign Up", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

