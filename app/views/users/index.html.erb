<div class="container">
  <h3 style="margin-top: 40px;">Manage Users</h3>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Manage</th>
          </tr>
        </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= link_to "#{user.username}", user_path(user) %></td>
            <td><%= user.email %></td>
            <td>
              <% if policy(user).destroy? %>
                <%= link_to "delete this user", user, method: :delete, data: {confirm: "Please confirm the deletion of '#{user.username}'."} %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
