<div class="container">

  <div class="col-md-12" style="padding-left: 0">
    <p style="font-size: 18px; font-weight: bold; margin-top: 40px;">Manage Users</p>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Username</th>
              <th>Email</th>
              <th>Manage</th>
            </tr>
          </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.first_name %> <%= user.last_name %></td>
              <td><%= link_to "#{user.username}", user_path(user) %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to "delete this user", user, method: :delete, data: {confirm: "Please confirm the deletion of '#{user.username}'."} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-8" style="padding-left: 0">
    <p style="font-size: 18px; font-weight: bold">Manage Categories</p>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= link_to "#{category.name}", category_path(category) %></td>
              <td><%= category.name %></td>
              <td><%= link_to "edit", edit_category_path(category) %> | <%= link_to "delete", category, method: :delete, data: {confirm: "Please confirm the deletion of '#{category.name}'."} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-4" style="padding-left: 0">
    <p style="font-size: 18px; font-weight: bold">Create A Category</p>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for [@category] do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "Enter category name" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, rows: 3, class: 'form-control', placeholder: "Enter category description" %>
          </div>
          <%= f.submit "Save Category", class: 'btn btn-success btn-sm' %>
        <% end %>
      </div>
    </div>
  </div>

</div>
