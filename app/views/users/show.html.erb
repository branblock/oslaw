<div class="container">
  <div class="col-md-4" style="padding-left: 0">
    <div style="margin-top: 40px">
      <h3><%= @user.first_name %> <%= @user.last_name %></h3>
      <p><%= image_tag @user.avatar.url(:thumb) %></p>
    </div>
    <div>
      <p><%= link_to "Edit your profile", edit_user_registration_path %><br />
      <%= link_to "Cancel your account", registration_path(resource_name), data: { confirm: "Are you sure? You will no longer be able to access Oslaw." }, method: :delete %></p>
      <p><strong><u>Info</strong></u><br />
      Jurisdiction:<br />
      Date joined:<br />
      Website:<br /></p>
      <p><strong><u>Social</strong></u><br />
      LinkedIn:<br />
      Twitter:<br />
      Facebook:<br />
      <p><strong><u>Oslaw Stats</strong></u><br/>
      Posts: <%= @user.posts.count %><br />
      Comments: <%= @user.comments.count %><br />
      Liked posts: <br/>
      Favorited posts:</p>
    </div>
  </div>
  <div class="col-md-4" style="margin-top: 40px; padding-left: 0">
  </div>
  <div class="col-md-4" style="margin-top: 40px; padding-left: 0">
    <p>Column 3</p>
  </div>
</div>
