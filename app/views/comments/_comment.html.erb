<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <div class="media">
    <div class="media-body">
      <%= link_to "#{comment.user.username}", user_path(comment.user) %> said on <%= localize(comment.created_at, :format => :comment_default) %>:
        <% if policy(comment).destroy? %>
          | <%= link_to "delete", [comment.post, comment], method: :delete, remote: true %>
        <% end %>
      <blockquote><%= markdown(comment.body) %></blockquote>
    </div>
    <%= pluralize (comment.get_upvotes.size), 'upvote' %> /
      <% if @current_user.voted_up_on? comment %>
        <%= link_to unlike_post_comment_path(@post, comment), method: :put do %>
          <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
        <% end %> <small>(remove upvote)</small>
      <% else %>
        <%= link_to like_post_comment_path(@post, comment), method: :put do %>
          <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
        <% end %> <small>(upvote)</small>
      <% end %>
  </div>
<% end %>
