<body id="page-posts-new" data-no-turbolink>

  <div class="row">
    <div id="first">
      <h3>Create A New Page</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= simple_form_for [@post] do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
          <%= f.input :tag_list, label: "Tags (seperated by commas)", input_html: {value: @post.tag_list.to_s} %>
          <%= link_to "Cancel", url_for(@post.user), class: 'btn btn-info' %>
          <%= f.button :button, "Create Page".html_safe, class: 'btn btn-success', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating..."} %>
        </div>
      <% end %>
    </div>
  </div>

</body>
