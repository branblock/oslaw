<!-- POST TITLE -->
<body id="page-posts-new">
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div id="first">
            <h3>Create A New Page</h3>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FORM -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= simple_form_for [@post] do |f| %>
          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :body, as: :text, input_html: {rows: 10 } %>
            <%= f.input :word_document, as: :file, label: "Upload a Word document" %>
            <%= f.input :pdf_document, as: :file, label: "Upload a PDF document" %>
            <%= f.input :tag_list, label: "Tags* (seperated by commas)", input_html: {value: @post.tag_list.to_s} %>
            <%= f.button :submit, class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</body>
