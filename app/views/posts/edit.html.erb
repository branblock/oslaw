<body id="page-posts-edit" data-no-turbolink>
  <div class="container">
    <div class="row">
      <div id="first">
        <div class="col-md-12">
          <!-- page title -->
          <h3>Edit&nbsp;<%= @post.title %></h3>
        </div>
      </div>
    </div>

    <!-- form -->
    <div class="row">
      <div class="col-md-12">
        <%= simple_form_for [@post] do |f| %>
          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :body, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Post'} } %>
            <%= f.input :tag_list, label: "Tags (seperated by commas)", input_html: {value: @post.tag_list.to_s} %>
            <%= f.button :button, "Save Page".html_safe, class: 'btn btn-default', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."} %>&nbsp;<%= link_to "Cancel", url_for(@post) %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</body>
