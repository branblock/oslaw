<!-- POST TITLE -->
<body id="page-posts-new">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <div id="first">
          <h3>Edit Page</h3>
        </div>
      </div>
    </div>

    <!-- FORM -->
    <div class="row">
      <div class="col-md-12">
        <%= simple_form_for [@post] do |f| %>
          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
            <%= f.input :tag_list, label: "Tags* (seperated by commas)", input_html: {value: @post.tag_list.to_s} %>
            <%= f.button :submit, class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</body>
