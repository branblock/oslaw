<div class="container">
  <div class="row">
    <div class="col-md-12" style="margin-top: 60px">
      <div class="panel panel-default">
        <div class="panel-heading" style="font-size: 16px">
          <strong><%= @post.title %></strong>
        </div>
        <div class="panel-body">
          Created by: <%= link_to "#{@post.user.username}", user_path(@post.user) %> <br />
          Created: <%= localize(@post.created_at, :format => :default) %><br />
          Last updated:<br />
          Category:<br />
          Master document title:<br />
          Master document version:<br />
          <% if policy(@post).update? %>
            <%= link_to "Edit this post", edit_post_path(@post) %>
          <% end %>
          <% if policy(@post).destroy? %>
            <br /><%= link_to "Delete this post", @post, method: :delete, data: {confirm: "Please confirm the deletion of '#{@post.title}'."} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-body">
            <%= @post.body %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>Post Options</strong></div>
        <div class="panel-body">
          <p>Text will go here</p>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <p><strong><u>Comments by the Oslaw Commmunity</strong></u></p>
      <% if @post.comments.empty? %>
        <p><%= "There are no comments. Be the first to comment." %></p>
      <% else %>
        <%= render @post.comments %>
      <% end %>
      <% if current_user %>
        <%= render "comments/form", comment: Comment.new, post: @post %>
      <% end %>
    </div>
  </div>
</div>
