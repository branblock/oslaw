<div class="container">
  <div class="col-md-8" style="padding-left: 0">
    <h3 style="margin-top: 60px">Edit Category</h3>
    <%= form_for [@category] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter category name" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 3, class: 'form-control', placeholder: "Enter category description" %>
      </div>
      <%= f.submit "Save Category", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
